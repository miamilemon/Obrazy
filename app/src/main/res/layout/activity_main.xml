<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/buttonLeft"
        android:layout_width="66dp"
        android:layout_height="52dp"
        android:src="@drawable/ic_lewo"
        android:visibility="visible"
        app:icon="@drawable/lewo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonClear"
        app:layout_constraintHorizontal_bias="0.761"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextRotacja"
        app:layout_constraintVertical_bias="0.185" />

    <ImageButton
        android:id="@+id/buttonClear"
        android:layout_width="66dp"
        android:layout_height="52dp"
        android:src="@drawable/ic_usun"
        app:icon="@drawable/usun"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonKamera"
        app:layout_constraintHorizontal_bias="0.917"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextRotacja"
        app:layout_constraintVertical_bias="0.185" />

    <ImageButton
        android:id="@+id/buttonKamera"
        android:layout_width="66dp"
        android:layout_height="52dp"
        android:src="@drawable/ic_kamera"
        app:icon="@drawable/kamera"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonPrawo"
        app:layout_constraintHorizontal_bias="0.929"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextSkala"
        app:layout_constraintVertical_bias="0.185" />

    <ImageButton
        android:id="@+id/buttonPrawo"
        android:layout_width="66dp"
        android:layout_height="52dp"
        android:src="@drawable/ic_prawo"
        app:icon="@drawable/prawo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.849"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextSkala"
        app:layout_constraintVertical_bias="0.185" />

    <ImageView
        android:id="@+id/imageViewZdj"
        android:layout_width="260dp"
        android:layout_height="375dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.157"
        app:srcCompat="@drawable/musztarda"
        tools:srcCompat="@drawable/musztarda" />

    <CheckBox
        android:id="@+id/checkBoxWidok"
        android:layout_width="148dp"
        android:layout_height="40dp"
        android:layout_marginTop="18dp"
        android:text="@string/pokaz_obraz"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewZdj"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/editTextSkala"
        android:layout_width="148dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="@string/skala"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.802"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxWidok"
        app:layout_constraintVertical_bias="0.059" />

    <EditText
        android:id="@+id/editTextRotacja"
        android:layout_width="148dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="@string/rotacja"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/editTextSkala"
        app:layout_constraintHorizontal_bias="0.809"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxWidok"
        app:layout_constraintVertical_bias="0.059" />
</androidx.constraintlayout.widget.ConstraintLayout>
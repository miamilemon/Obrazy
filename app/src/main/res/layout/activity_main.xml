<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label"
            android:textSize="24dp"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/imageViewZdj"
            android:layout_width="260dp"
            android:layout_height="325dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/musztarda"
            tools:srcCompat="@drawable/musztarda" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:text="@string/rotacjaX"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="24dp"/>

                <SeekBar
                    android:id="@+id/seekBarRotacjaX"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:min="1"
                    android:max="360"
                    android:layout_marginLeft="20dp"
                    />
            </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:text="@string/rotacjaY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="24dp"/>

            <SeekBar
                android:id="@+id/seekBarRotacjaY"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:min="1"
                android:max="360"
                android:layout_marginLeft="20dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:text="@string/przezroczystosc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="24dp"/>

            <SeekBar
                android:id="@+id/seekBarPrzezroczystosc"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:min="0"
                android:max="255"
                android:layout_marginLeft="20dp"
                />
        </LinearLayout>

        <TextView
            android:text="@string/filtry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="24dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            >
            <Button
                android:id="@+id/buttonFiltrRed"
                android:backgroundTint="@android:color/holo_red_light"
                android:layout_width="66dp"
                android:layout_height="44dp"
                android:layout_marginHorizontal="10dp"/>
            <Button
                android:id="@+id/buttonFiltrGreen"
                android:backgroundTint="@android:color/holo_green_light"
                android:layout_width="66dp"
                android:layout_height="44dp"
                android:layout_marginHorizontal="10dp"/>
            <Button
                android:id="@+id/buttonFiltrBlue"
                android:backgroundTint="@android:color/holo_blue_light"
                android:layout_width="66dp"
                android:layout_height="44dp"
                android:layout_marginHorizontal="10dp"/>
        </LinearLayout>
        <ImageButton
            android:id="@+id/buttonKamera"
            android:layout_width="66dp"
            android:layout_height="44dp"
            app:srcCompat="@drawable/ic_kamera" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>